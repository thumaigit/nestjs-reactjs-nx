# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build nestjs`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t nestjs`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system nestjs && \
          adduser --system -G nestjs nestjs

COPY dist/nestjs nestjs/
RUN chown -R nestjs:nestjs .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix nestjs --omit=dev -f install

CMD [ "node", "nestjs" ]
